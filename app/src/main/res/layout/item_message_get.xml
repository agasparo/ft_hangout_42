<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingTop="8dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    android:padding="8dp"
    android:textColor="#000000"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/rounded_rectangle_orange"
    android:orientation="vertical"
    android:id="@+id/messageGlobal">
    <GridLayout
        android:id="@+id/list_img_g"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    </GridLayout>
    <TextView
        android:id="@+id/messageG"
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>
</LinearLayout>
<TextView
    android:id="@+id/message_date_g"
    android:text="11:40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    app:layout_constraintBottom_toBottomOf="@+id/messageGlobal"
    app:layout_constraintRight_toRightOf="@+id/messageGlobal"
    tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>